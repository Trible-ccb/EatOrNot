<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
	android:background="@drawable/navi_bar">
    
	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_weight="1.0"
	    android:id="@+id/btn_navi_1_bg_layout"
	    android:layout_gravity="center"
	    android:paddingLeft="5dp"
	    android:paddingTop="1dp"
	    android:paddingRight="5dp"
	    android:paddingBottom="1dp"
	    >
	    <Button 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:drawableTop="@drawable/home"
	        android:id="@+id/btn_navi_1"
	        android:text="@string/eating_or_not"
	        android:gravity="center"
	        android:background="@color/transparent"
	        android:textColor="#FFF"
	        />
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_weight="1.0"
	    android:id="@+id/btn_navi_2_bg_layout"
	    android:layout_gravity="center"
	    android:paddingLeft="5dp"
	    android:paddingTop="1dp"
	    android:paddingRight="5dp"
	    android:paddingBottom="1dp"
	    >
	    <Button 
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:drawableTop="@drawable/my_favorite"
	        android:id="@+id/btn_navi_2"
	        android:text="@string/my_favor"
	        android:gravity="center"
	        android:background="@color/transparent"
	        android:textColor="#FFF"
	        
	        />
	</LinearLayout>
</LinearLayout>