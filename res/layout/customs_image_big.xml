<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFF"
    android:gravity="center"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/bg_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#0000"
        android:scaleType="centerInside"
        android:src="@drawable/default_food" >
    </ImageView>

    <RelativeLayout 
        
		android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:background="@drawable/grey"
        android:padding="1dp"
        android:id="@+id/img_text_bottom"
		android:layout_marginTop="-48dp"

        >
    <TextView
        android:id="@+id/img_dscp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="caomei "
        android:textColor="#FFF"
        android:textSize="32sp"
        android:shadowColor="#000"
		android:shadowDx="0"
		android:shadowDy="1"
		android:shadowRadius="1"
		
		>
    </TextView>
    
    <Button 
        android:background="@drawable/publish_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:id="@+id/share_to_weibo"
        android:focusable="false"
        
        />
    <Button 
        android:background="@drawable/unfavor_btn_seletor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/share_to_weibo"
        android:layout_centerVertical="true"
        android:id="@+id/btnFavor"
        android:focusable="false"
		android:layout_marginLeft="-50dp"
		android:paddingLeft="12dp"
		android:paddingRight="12dp"
		android:drawableRight="@drawable/collected_heart"
        />
    </RelativeLayout>
</LinearLayout>