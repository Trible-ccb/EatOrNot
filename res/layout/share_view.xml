<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
     >

  <RelativeLayout
		android:id="@+id/rlTitle"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/header_null">
		<Button
			android:id="@+id/btnClose"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="返 回"
			android:textColor="#fff"
			android:textSize="18sp"
  			android:gravity="center"
			android:layout_marginLeft="6dp"
			android:layout_marginTop="8dp"
			android:layout_centerVertical="true"
			android:background="@drawable/title_btn_seletor"
			android:layout_alignParentLeft="true"
			android:paddingLeft="10dp"
			android:paddingRight="10dp"
			android:shadowColor="#000"
			android:shadowDx="0"
			android:shadowDy="1"
			android:shadowRadius="1"
			android:paddingBottom="-10dp"
		/>
				
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="分享"
			android:layout_centerInParent="true"
			android:textSize="20sp"
			android:textColor="#000"
			/>
				
		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="发 送"
			android:textColor="#fff"
			android:textSize="16sp"
			android:layout_marginRight="6dp"
			android:layout_marginTop="8dp"
			android:gravity="center"
			android:layout_centerVertical="true"
			android:background="@drawable/title_btn_seletor"
			android:layout_alignParentRight="true"
			android:visibility="gone"/>
	</RelativeLayout>
  
  <LinearLayout
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="vertical"
  android:layout_below="@id/rlTitle"
  android:padding="5dp"
  >

  				
	  			<LinearLayout 
	  			    android:layout_width="fill_parent"
	  			    android:layout_height="fill_parent"
	  			    android:background="@drawable/bg1"
	  			    android:layout_marginTop="10dp"	  			    
	  			    android:orientation="vertical"
	  			    android:padding="10dp"
	  			    >
	  			    <TextView 
	  			        android:layout_width="wrap_content"
	  			        android:layout_height="wrap_content"
	  			        android:text="说点什么吧："
	  			        android:layout_marginTop="10dp"
	  			        android:layout_marginBottom="10dp"
	  			        android:layout_marginLeft="10dp"
	  			        android:layout_marginRight="10dp"
	  			        android:textSize="18sp"
	  			        android:textColor="#000"
	  			        />
	  			    <EditText 
	  			        android:layout_width="fill_parent"
	  			        android:layout_height="wrap_content"
	  			        android:hint="@string/hint_for_share"
	  			        android:background="@drawable/bg_editor"
	  			        android:minLines="3"
	  			        android:maxLines="6"
	  			        android:id="@+id/etEdit"
	  			        android:gravity="top"
	  			        android:layout_marginLeft="10dp"
	  			        android:layout_marginRight="10dp"
	  			        android:scrollbars="vertical"
	  			        android:autoLink="web"
	  			        />
					<RelativeLayout 
					    android:layout_width="fill_parent"
					    android:layout_height="wrap_content"
					    android:background="@drawable/bg_editor"
					    android:layout_marginTop="10dp"
	  			        android:layout_marginLeft="10dp"
	  			        android:layout_marginRight="10dp"
					    >
					    
					    <Button 
					        android:layout_width="fill_parent"
					        android:layout_height="wrap_content"
					        android:background="#0000"
					       	android:text="分享到新浪微博 "
					       	android:drawableLeft="@drawable/weibo"
					       	android:gravity="left|center_vertical"
					       	android:id="@+id/connect_weibo"
							android:paddingLeft="5dp"
							android:textSize="18sp"
							android:drawablePadding="5dp"
					        />
					    <TextView 
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:text="未绑定"
					        android:layout_alignParentRight="true"
					        android:layout_centerVertical="true"
					        android:id="@+id/weibo_state"
					        android:textSize="12sp"
					        />
					</RelativeLayout>
	  			    <Button 
	  			        android:layout_width="wrap_content"
	  			        android:layout_height="wrap_content"
	  			        android:id="@+id/btnSend"
	  			        android:background="@drawable/title_btn_seletor"
	  			        android:text="分 享 "
	  			        android:layout_gravity="center"
	  			        android:layout_marginTop="20dp"
	  			        android:paddingLeft="40dp"
	  			        android:paddingRight="40dp"
	  			        android:textColor="#fff"
	  			        android:shadowColor="#000"
						android:shadowDx="0"
						android:shadowDy="1"
						android:shadowRadius="1"
	  			        />
	  			</LinearLayout>

  </LinearLayout>
</RelativeLayout>
