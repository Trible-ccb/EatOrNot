<?xml version="1.0" encoding="utf-8"?>
<com.android.eatingornot.widget.ResizeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"   
   	 android:layout_width="fill_parent"
	  android:layout_height="fill_parent"
	  android:orientation="vertical"
	  android:background="@drawable/bg"
	  android:id="@+id/resize_layout">
  <include layout="@layout/customs_title"></include>
  	<LinearLayout
	    android:layout_width="fill_parent"
	  	android:layout_height="wrap_content"
	  	android:orientation="vertical"
	  	android:paddingLeft="10dip"
	  	android:paddingRight="10dp"
	  	android:paddingTop="10dp"
	  	android:id="@+id/search_bar_bg"
  	>

  	<include layout="@layout/customs_search_bar"></include>
	</LinearLayout>
  	<RelativeLayout 
         android:layout_width="fill_parent"
  		android:layout_height="wrap_content"
  		>
  	<LinearLayout
	    android:layout_width="fill_parent"
	  	android:layout_height="fill_parent"
	  	android:orientation="vertical"
	  	android:paddingLeft="10dip"
	  	android:paddingRight="10dp"
	  	android:layout_marginBottom="60dp"
	  	android:background="@drawable/bg1"
  	>

  		<TextView 
		    android:text="@string/hot_food"
		    android:id="@+id/text_hot_food"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:padding="10dip"
		    android:textColor="#f22"
		    android:textSize="18sp"
    	/>
		<RelativeLayout 
    		android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			
			>
  	<!-- 热门食物页面 -->
  		<LinearLayout 
  	    	android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:id="@+id/view_papers_layout"

			>
  		    <android.support.v4.view.ViewPager

				android:id="@+id/view_papers"
				android:layout_width="fill_parent"
				android:layout_height="360dp"
			  	android:cacheColorHint="#00000000"
			></android.support.v4.view.ViewPager>
  		</LinearLayout>

  		<LinearLayout
  				android:layout_width="wrap_content"
  				android:layout_height="wrap_content"
  				android:id="@+id/dots"
  				android:layout_centerHorizontal="true"
  				android:layout_alignParentBottom="true"
  				android:layout_marginTop="5dp"
  			/>
		</RelativeLayout>
  		
  		</LinearLayout>



  	<LinearLayout
  	    android:layout_width="fill_parent"
  	    android:layout_height="wrap_content"
  	    android:layout_alignParentBottom="true" >
		
  	    <include layout="@layout/customs_navibar" />
  	</LinearLayout>

  <ImageButton 
  				android:layout_width="fill_parent"
  				android:layout_height="fill_parent"
  				android:background="@color/trans_gray"
  				android:visibility="gone"
  				android:id="@+id/over_button"
  				      
      	></ImageButton>
  
  </RelativeLayout>

  </com.android.eatingornot.widget.ResizeLayout>
